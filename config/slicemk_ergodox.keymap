#define LAYER_MACOS 0
#define LAYER_RECT 1
#define LAYER_EDITING 2
#define LAYER_MISC 3
#define LAYER_WIN 4
#define LAYER_SKETCHUP 5
#define LAYER_FORTNITE 6
#define LAYER_LAYERS 7
#define LAYER_SPARE 8

#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/outputs.h>
#include <dt-bindings/zmk/pointing.h>
#include <dt-bindings/zmk/rgb.h>
#include "zmk-helpers/helper.h"

/* Global Defaults */
#define QUICK_TAP_MS 175
#define TAP_TERM_MS 300

&mt {
  flavor = "tap-preferred";
  tapping-term-ms = <TAP_TERM_MS>;
  quick-tap-ms = <QUICK_TAP_MS>;
};


/ {
    behaviors {
		c_mt: c_mt {
   			compatible = "zmk,behavior-hold-tap";
			#binding-cells = <2>;
  			tapping-term-ms = <TAP_TERM_MS>;
  			quick-tap-ms = <QUICK_TAP_MS>;
			flavor = "tap-preferred";
            bindings = <&kp>, <&kp>;
        };
        td_n1: td_n1 {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
  			tapping-term-ms = <TAP_TERM_MS>;
            bindings = <&c_mt EXCL N1>, <&kp F1>;
        };
        td_n2: td_n2 {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
  			tapping-term-ms = <TAP_TERM_MS>;
            bindings = <&c_mt AT N2>, <&kp F2>;
        };
        td_n3: td_n3 {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
  			tapping-term-ms = <TAP_TERM_MS>;
            bindings = <&c_mt HASH N3>, <&kp F3>;
        };
        td_n4: td_n4 {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
  			tapping-term-ms = <TAP_TERM_MS>;
            bindings = <&c_mt DOLLAR N4>, <&kp F4>;
        };
        td_n5: td_n5 {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
  			tapping-term-ms = <TAP_TERM_MS>;
            bindings = <&c_mt PERCENT N5>, <&kp F5>;
        };
        td_n6: td_n6 {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
  			tapping-term-ms = <TAP_TERM_MS>;
            bindings = <&c_mt CARET N6>, <&kp F6>;
        };
        td_n7: td_n7 {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
  			tapping-term-ms = <TAP_TERM_MS>;
            bindings = <&c_mt AMPERSAND N7>, <&kp F7>;
        };
        td_n8: td_n8 {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
  			tapping-term-ms = <TAP_TERM_MS>;
            bindings = <&c_mt ASTERISK N8>, <&kp F8>;
        };
        td_n9: td_n9 {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
  			tapping-term-ms = <TAP_TERM_MS>;
            bindings = <&c_mt LEFT_PARENTHESIS N9>, <&kp F9>;
        };
        td_n0: td_n0 {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
  			tapping-term-ms = <TAP_TERM_MS>;
            bindings = <&c_mt RIGHT_PARENTHESIS N0>, <&kp F10>;
        };
        td_minus: td_minus {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
  			tapping-term-ms = <TAP_TERM_MS>;
            bindings = <&c_mt EQUAL MINUS>, <&kp F11>;
        };
		leader_sys: leader_sys {
			compatible = "zmk,behavior-leader-key";
			#binding-cells = <0>;
            usb { sequence = <U S B>; bindings = <&out OUT_USB>; };
            ble { sequence = <B L E>; bindings = <&out OUT_BLE>; };
            bt0 { sequence = <B N0>; bindings = <&bt BT_SEL 0>; };
            bt1 { sequence = <B N1>; bindings = <&bt BT_SEL 1>; };
            bt2 { sequence = <B N2>; bindings = <&bt BT_SEL 2>; };
            btc { sequence = <C L E A R>; bindings = <&bt BT_CLR>; };
			boot { sequence = <B O O T>; bindings = <&bootloader>; };
            reset { sequence = <R E S E T>; bindings = <&sys_reset>; };
		};
    };
};

/ {
	keymap {
		compatible = "zmk,keymap";
		layer_0 {
			bindings = <
				&bootloader
				&kp ESCAPE        &td_n1           &td_n2       &td_n3 		 &td_n4        &td_n5                                   &mt LS(LG(A)) LC(TAB)             &key_repeat                         &td_n6                   &td_n7         &td_n8         &td_n9       &td_n0          &td_minus
				&kp TAB           &kp Q            &mt LG(W) W  &kp E        &mt LG(R) R   &mt LG(T) T                              &kp GRAVE                         &kp EQUAL                           &kp Y                    &kp U          &kp I          &kp O        &kp P           &kp BACKSLASH
				&kp LEFT_GUI      &kp A            &kp S        &kp D        &kp F         &kp G                                                                                                          &kp H                    &kp J          &kp K          &kp L        &kp SEMICOLON   &kp SINGLE_QUOTE
				&kp LEFT_SHIFT    &kp Z            &kp X        &kp C        &kp V         &kp B                                    &mt KP_LPAR LBKT                  &mt KP_RPAR RBKT                    &kp N                    &kp M          &kp COMMA      &kp PERIOD   &kp SLASH       &kp RIGHT_SHIFT
				&kp LC(LG(SPACE)) &kp LCTRL        &none        &kp LALT     &kp LGUI                                                                                                                                              &kp LEFT       &kp DOWN       &kp UP       &kp RIGHT       &leader_sys
				                                                                           &mt LS(LG(KP_NUMBER_2)) LS(LG(NUMBER_1)) &mt LC(LG(Q)) C_PLAY_PAUSE        &to LAYER_LAYERS                    &tog LAYER_MISC
				                                                             &kp BACKSPACE &lt LAYER_RECT DELETE                    &kp END                           &kp PAGE_UP                         &lt LAYER_EDITING RETURN &kp SPACE
				                                                                                                                    &kp HOME                          &kp PAGE_DOWN
			>;
		};
		layer_1 {
			bindings = <
				&bootloader
				&trans           &kp LC(LS(LA(NUMBER_1))) &kp LC(LS(LA(NUMBER_2))) &kp LC(LS(LA(NUMBER_3))) &kp LC(LS(LA(NUMBER_4))) &trans               &mt LC(LS(A)) LC(TAB) &trans            &trans             &trans                         &trans           &trans              &trans                          &trans
				&trans           &trans                   &kp LC(LA(RETURN))       &trans                   &kp LC(LEFT_SHIFT)       &kp LC(LS(LEFT_ALT)) &trans                &trans            &trans             &trans                         &trans           &trans              &trans                          &trans
				&kp LEFT_CONTROL &trans                   &kp LS(LEFT_ALT)         &trans                   &kp LC(LG(F))            &trans                                                       &kp LC(LEFT_ARROW) &trans                         &kp LC(UP_ARROW) &kp LC(RIGHT_ARROW) &trans                          &trans
				&trans           &trans                   &trans                   &trans                   &trans                   &trans               &trans                &trans            &trans             &trans                         &trans           &trans              &trans                          &trans
				&trans           &trans                   &trans                   &trans                   &trans                                                                                                   &kp LC(LS(LA(LG(LEFT_ARROW)))) &trans           &kp LC(LA(EQUAL))   &kp LC(LS(LA(LG(RIGHT_ARROW)))) &none
				                                                                                                                     &trans               &trans                &to LAYER_LAYERS  &tog LAYER_MISC
				                                                                                            &trans                   &trans               &trans                &kp LC(LA(EQUAL)) &kp LC(LA(RETURN)) &trans
				                                                                                                                                          &trans                &kp LC(LA(MINUS))
			>;
		};
		layer_2 {
			bindings = <
				&bootloader
				&trans &trans &trans &trans &trans &trans &trans &trans           &trans          &trans &trans &trans &trans &trans
